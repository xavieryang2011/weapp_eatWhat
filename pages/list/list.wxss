page {
	padding: 0px;
}
.list-header{
	display: block;
	width: 100%;
	text-align: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-name{
	font-size: 20px;
}
.list-container{
	padding: 15px;
	border: 1px solid #ccc;
	background-color: #eee;
	text-align: center;
	border-radius: 10px;
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  margin: 10rpx;
}
.list-item{
  text-align: center;
  width: 150px;
}
.list-item-button{
  text-align: center;
  width: 100px;
  left: 50px
}
.list-btn{
	margin: 1rem 2rem;
}